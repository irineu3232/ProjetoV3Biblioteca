@model ProjetoBiblioteca.Models.Autores

<h2>Cadastrar Autor</h2>

<form asp-action="Criar" method="post">
    @Html.AntiForgeryToken()
    <section>
        <div>
            <label>Nome</label>
            <input asp-for="Nome" required />
        </div>
    </section>
    <input type="submit" value="Salvar" />
</form>
