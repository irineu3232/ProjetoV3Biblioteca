@model ProjetoBiblioteca.Models.Leitor

@{

    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "Novo Livro";

}

<h2 class=" text-center;">Novo Livro</h2>

<link href="~/css/acoes.css" rel="stylesheet" />

<form asp-action="Criar" method="post" class="f" enctype="multipart/form-data">

    @Html.AntiForgeryToken()



    <div class="d">
        <label class="l">Nome</label>
        <input asp-for="nome" required class="i" />
    </div>



    <div class="d">
        <label class="l lif">
           Insira sua foto
            <input type="file" name="foto" accept="image/*" class="i" style="display:none" />
        </label>
        
        <small class="hint"> Formatos comuns: JPG/PNG. Tamanho Moderado</small>
    </div>

    <button type="submit">Salvar</button>

</form> 